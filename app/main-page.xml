<Page xmlns="http://www.nativescript.org/tns.xsd" loaded = "onLoaded" class="page">
    <Page.actionBar>
    <actionBar title="Ricardo Luna"></actionBar>
    </Page.actionBar>
    <GridLayout rows="auto, auto, *">
        <!-- Snapshot and Name Section -->
        <StackLayout row="0" class="header">
            <ScrollView>
                <Image src="~/app/Snapshot/LunaRicardoProfessionalPhoto.jpeg" width="100%" class="snapshot"></Image>
                <Label text="Ricardo Luna" class="header-label"></Label>
                <Label text="CIS Student/Tutor" class="subheader-label"></Label>
            </ScrollView>
        </StackLayout>

        <!-- Buttons Section -->
<StackLayout row="1" class="button-container">
        <Button text="About Me" onTap="onAboutMeTap" class="main-button about-button"></Button>
        <Button text="Skills" onTap="onSkillsTap" class="main-button skills-button"></Button>
        <Button text="Contact Me" onTap="onContactMeTap" class="main-button contact-button"></Button>
        <Button text="Go Back" onTap="onGoBackTap" class="main-button goback-button"></Button>
    </StackLayout>

        <!-- Content Section -->
        <StackLayout row="2" class="content">
            <!-- Add additional content here if needed -->
        </StackLayout>
    </GridLayout>
</Page>

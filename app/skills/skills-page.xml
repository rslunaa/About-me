<Page loaded="pageLoaded">
    <StackLayout>
        <Label text="My List"/>
        <ListView id="myListView" itemTap="onItemTap">
            <ListView.itemTemplate>
                <StackLayout orientation="horizontal">
                    <Label class="skill-category" text="{{ category }}"/>
                        <Label class="skill-name" text="{{ skill }}"/>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>

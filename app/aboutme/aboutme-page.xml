<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onLoaded" class="page">
    <Page.actionBar>
        <actionBar title="Ricardo Luna"></actionBar>
    </Page.actionBar>

    <GridLayout rows="auto, *, auto">
        <!-- Snapshot and Name Section -->
        <!-- Content Section -->
        <StackLayout row="1" class="content" verticalAlignment="center" horizontalAlignment="center">
                <Image src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcToxn1BpQ3JIokq8GJZnholmazDOFk72qdZorxWHFsQ5O8Tx2RR4S5eJ9vx1cmL4LbTXB0&amp;usqp=CAU" class="snapshot"></Image>
            </StackLayout>
            <Label text="About Me" class="header-label" fontSize="20" marginTop="10" horizontalAlignment="center"></Label>
            <Label textWrap="true" text="Passionate about leveraging the power of information technology to drive social and economic development, with a dedicated focus on empowering emerging communities and fostering growth." class="bio" marginTop="2" horizontalAlignment="center" margin="10" textAlignment="center"></Label>

            <Label text="Education" class="section-header" fontSize="18" fontWeight="bold" marginTop="10" horizontalAlignment="center"></Label>
            <Label text="B.S. Computer Information Systems" class="education" horizontalAlignment="center" marginTop="05"></Label>
            <Label text="B.S. International Development - Management" class="education" horizontalAlignment="center"></Label>
            <Label text="A.A. Interdisciplinary Studies" class="education" horizontalAlignment="center"></Label>

            <Label text="Languages" class="section-header" fontSize="18" fontWeight="bold" marginTop="10" horizontalAlignment="center"></Label>
            <FlexboxLayout class="languages-container" flexDirection="row" justifyContent="center" alignItems="center" marginTop="10">
                <Image src="~/languages/Eng.jpg" width="60" height="60" class="languages" borderRadius="60" margin="03"></Image>
                <Image src="~/languages/Esp.png" width="60" height="60" class="languages" borderRadius="60" margin="03"></Image>
                <Image src="~/languages/Port.jpg" width="60" height="60" class="languages" borderRadius="60" margin="03"></Image>
            </FlexboxLayout>
        </StackLayout>

        <!-- Buttons Section -->
        <StackLayout row="2" class="button-container">
            <Button text="Go Back" onTap="onGoBackTap" class="main-button goback-button"></Button>
        </StackLayout>
    </GridLayout>
</Page>

<!-- contactme-page.xml -->
<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onLoaded" class="page">
    <Page.actionBar>
        <actionBar title="Ricardo Luna"></actionBar>
    </Page.actionBar>

    <GridLayout rows="auto, *, auto">
        <StackLayout row="0" class="header">
            <ScrollView>
                <GridLayout rows="auto, auto">
                    <Image src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcToxn1BpQ3JIokq8GJZnholmazDOFk72qdZorxWHFsQ5O8Tx2RR4S5eJ9vx1cmL4LbTXB0&amp;usqp=CAU" class="snapshot"></Image>
                    <Label text="Contact Me" class="header-label" horizontalAlignment="center" marginTop="40"></Label>
                    <StackLayout row="1" class="button-container">
                        <!-- Add your contact form inputs here -->
                        <StackLayout class="form-group">
                            <Label text="Name" class="label"></Label>
                            <TextField hint="Enter your name" class="input"></TextField>
                        </StackLayout>
                        <StackLayout class="form-group">
                            <Label text="Email" class="label"></Label>
                            <TextField hint="Enter your email" keyboardType="email" class="input"></TextField>
                        </StackLayout>
                        <StackLayout class="form-group">
                            <Label text="Contact Message" class="label"></Label>
                            <TextField hint="Type your message" class="input" height="100"></TextField>
                        </StackLayout>
                        <Button text="Submit" onTap="onSubmitTap" class="main-button submit-button"></Button>
                    </StackLayout>
                </GridLayout>
            </ScrollView>
        </StackLayout>

        <StackLayout row="2" class="button-container">
            <Button text="Go Back" onTap="onGoBackTap" class="main-button goback-button"></Button>
        </StackLayout>
    </GridLayout>
</Page>
